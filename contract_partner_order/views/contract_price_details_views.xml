<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="contract_partner_order_view_tree" model="ir.ui.view">
            <field name="name">contract.partner.order.view.tree</field>
            <field name="model">contract.price.details</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="product_id" />
                    <field name="date_from" />
                    <field name="date_to" />
                    <field name="price" />
                </tree>
            </field>
        </record>

        <record id="contract_partner_order_view_form" model="ir.ui.view">
            <field name="name">contract.partner.order.view.form</field>
            <field name="model">contract.price.details</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="product_id" />
                            <field name="date_from" />
                            <field name="date_to" />
                            <field name="price" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
