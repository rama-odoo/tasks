<?xml version="1.0"?>
<odoo>
    <!--tree view report-->
    <record id="sale_order_tree_view_report" model="ir.ui.view">
        <field name="name">sale.order.tree.view.report</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <tree>
                <!-- <field name="x_sequence_no"/> -->
                <field name="x_client_order_ref"/>
                <!-- <field name="x_studio_customer_po_date"/> -->
                <field name="order_id" string="Order No."/>
                <field name="x_date_order"/>
                <field name="x_invoice_no"/>
                <field name="x_invoice_date"/>
                <field name="x_default_code"/>
                <field name="name"/>
                <field name="product_uom_qty" string="item qty"/>
                <!-- <field name="x_studio_requested_date"/> -->
                <!-- <field name="x_commitment_date"/> -->
                <field name="x_on_time_delivery"/>
                <field name="x_delay_days"/>
                <field name="x_is_promise_request"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sale_order_line_views_action">
        <field name="name">OTD Report</field>
        <field name="view_id" ref="sale_order_tree_view_report"/>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">tree</field>
    </record>
    <menuitem id="sale_order_line_menu_conditions" parent="sale.menu_sale_report" name="sale order line">
        <menuitem id="sale_order_line_menu_action" action="sale_order_line_views_action"/>
    </menuitem>
</odoo>