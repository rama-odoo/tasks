<?xml version="1.0"?>
<odoo>
    <record id="mrp_bom_inherit_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.inherit.form.view</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tmpl_id']" position='before'>
                <field name="x_customer"/>
            </xpath>

            <xpath expr="//field[@name='product_id']" position='after'>
                <field name="x_equipment"/>
            </xpath>

            <xpath expr="//div[hasclass('o_row')]" position="after">
                <field name="x_prepared_by"/>
                <field name="x_checked_by"/>
                <field name="x_revision"/>
            </xpath>

            <xpath expr="//group/field[@name='code']" position="before">
                <field name="x_bom_no"/>
            </xpath>

            <xpath expr="//group/field[@name='company_id']" position="after">
                <field name="x_date"/>
            </xpath>
        </field>
    </record>
</odoo>