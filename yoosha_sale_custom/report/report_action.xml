<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="paperformat_custom_sale_order_report" model="report.paperformat">
        <field name="name">Custom Report</field>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">70</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_spacing">65</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_custom_sale_order_report" model="ir.actions.report">
        <field name="name">Sale/Quotation Report</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">yoosha_sale_custom.sale_order_report</field>
        <field name="report_file">yoosha_sale_custom.sale_order_report</field>
        <field name="print_report_name">'Quotation/Order Report- %s' % (object.name)</field>
        <field name="paperformat_id" ref="yoosha_sale_custom.paperformat_custom_sale_order_report"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_custom_proforma_report" model="ir.actions.report">
        <field name="name">Proforma Report</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">yoosha_sale_custom.proforma_report</field>
        <field name="report_file">yoosha_sale_custom.proforma_report</field>
        <field name="print_report_name">'Proforma Report - %s' % (object.name)</field>
        <field name="paperformat_id" ref="yoosha_sale_custom.paperformat_custom_sale_order_report"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
