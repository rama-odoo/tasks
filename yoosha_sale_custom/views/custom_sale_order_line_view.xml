<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form_inherit_yoosha_sale_custom" model="ir.ui.view">
        <field name="name">view.order.form.inherit.yoosha.sale.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']//tree//field[@name='qty_to_invoice']" position='before'>
                <field string="Note" name="x_note"/>
            </xpath>
            <xpath expr="//page[@name='other_information']//group[@name='sales_person']/field[@name='team_id']" position="after">
                <field name="x_shipping_terms"/>
            </xpath>
        </field>
    </record>
</odoo>
