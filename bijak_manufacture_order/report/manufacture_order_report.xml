<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="mrp_product_report">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <t t-set="product" t-value="o.qty_producing"/>
                    <t t-foreach="range(0, int(product))" t-as="a">
                        <div style="display: inline-block; width:2in;height:2in; margin:2px;border:1pt solid black;">
                            <div class="page" style="font-size:0.5em">
                                <div class="col-md-12 p-1">
                                    <div>
                                      <img class="pull-left" t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 12.8%;" alt="Logo"/>
                                      <img class="pull-right" t-att-src="'/bijak_manufacture_order/static/src/img/veg.png'" style="height:12.8%;width:12.8%"/>
                                      <strong class="text-center" t-field="o.product_id.name" style="font-size:8.3px;  display: inline-block;  width: 13em;padding:2px"/>
                                    </div>
                                    <div>Quantity :
                                        <span t-field="o.product_tmpl_id.x_studio_label_quantity"/>
                                    </div>
                                    <div>MRP :
                                        <span t-field="o.product_id.list_price"/>
                                    </div>
                                    <div>Packed on :
                                        <span t-field="o.date_planned_start"/>
                                    </div>
                                    <div>BEST BEFORE :
                                        <span t-field="o.product_tmpl_id.x_studio_best_before"/>
                                    </div>
                                    <div style="font-size:1em">"Keep it Refrigerated" (Net weight when packed) Packed By -
                                        <div t-field="o.company_id"/>
                                        <div t-field="o.picking_type_id.warehouse_id.partner_id" t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=',')"/>
                                        <div class="text-center" t-field="o.company_id.partner_id.email"/>
                                    </div>
                                    <div>
                                        <img class="pull-left" src="/bijak_manufacture_order/static/src/img/fssai.png" style="height:8%;width:20%"/>
                                        <t t-if="o.product_id.barcode">
                                            <div class="center" t-field="o.product_id.barcode" t-options="{'widget': 'barcode', 'img_style': 'width:65%;height:5%;'}"/>
                                            <div class="text-center" t-out="o.product_id.barcode"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <template id="product_report">
            <t t-call="web.html_container">
                <t t-call="bijak_manufacture_order.mrp_product_report"/>
            </t>
        </template>
    </data>
</odoo>