<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="sale_order_custom_report_rama" inherit_id="sale.report_saleorder_document">
        <xpath expr="//thead//tr/th[@name='th_description']" position="before">
            <th name="th_sr_no" class="text-center">Sr no</th>
        </xpath>

        <xpath expr="//table[hasclass('table','table-sm','o_main_table')]//tbody/t[@t-set='current_subtotal']"
               position="after">
            <t t-set="sr_no" t-value="0"/>
        </xpath>
        <xpath expr="//table[hasclass('table','table-sm','o_main_table')]//td[@name='td_name']" position="before">
            <td name="td_sr_no">
                <t t-set="sr_no" t-value="sr_no + 1"/>
                <span t-esc="sr_no"/>
            </td>
        </xpath>
    </template>
</odoo>