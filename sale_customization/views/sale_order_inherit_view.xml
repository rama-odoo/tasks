<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_inherit_view_form" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="x_contact_person"/>
            </xpath>
            <xpath expr="//page[@name='order_lines']//group[@name='note_group']//field[@name='note']" position="after">
                <field name="x_note" nolabel="1" placeholder="Notes"/>
            </xpath>
        </field>
    </record>
</odoo>
