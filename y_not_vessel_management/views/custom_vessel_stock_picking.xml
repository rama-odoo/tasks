<?xml version="1.0"?>
<odoo>
    <record id="sale_order" model="ir.ui.view">
        <field name="name">stock.picking.view.vessel.management</field>
        <field name="model">sale.order</field>
<!--        <field name="inherit_id" ref="studio_customization.odoo_studio_stock_pi_66e96c16-c3db-464f-b673-36af409729df"/>-->
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="customer_field" string="vessel"/>
            </xpath>
        </field>
    </record>
    <record id="stock_picking_view_vessel_management" model="ir.ui.view">
        <field name="name">stock.picking.view.vessel.management</field>
        <field name="model">stock.picking</field>
<!--        <field name="inherit_id" ref="studio_customization.odoo_studio_stock_pi_66e96c16-c3db-464f-b673-36af409729df"/>-->
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="customer_field" string="vessel" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
            </xpath>
        </field>
    </record>

    <record id="pivot_views_vessel_management" model="ir.ui.view">
        <field name="name">pivot.views.vessel.management</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <pivot string="Delivery By Vessel"/>
        </field>
    </record>

    <record id="action_delivery_vessel_management" model="ir.actions.act_window">
        <field name="name">Delivery By Vessel</field>
        <field name="res_model">stock.move</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">pivot</field>
        <field name="search_view_id" ref="pivot_views_vessel_management"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Vessel found. Let's create one!
            </p>
        </field>
    </record>


        <menuitem id="stock_picking_menu"
                  name="Custom Report"
                  parent="stock.menu_stock_root" sequence="6"/>

    <menuitem id="menu_customer_details"
              name="Delivery By Vessel"
              parent="stock_picking_menu"
              action="action_delivery_vessel_management"
              sequence="4"/>

</odoo>