<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_move_inherit_view_form" model="ir.ui.view">
        <field name="name">account_move_inherit_view_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page id="other_detail" string="Other Details" name="other_details">
                    <group id="other_details_group">
                        <group name="vehicle_details">
<!--                            <field name="lr_number"/>-->
                            <field name="lr_date"/>
                            <field name="motor_vehicle_no"/>
                            <field name="dispatch_throug"/>
                            <field name="freight"/>
                            <field name="insurance"/>
                            <field name="destination"/>
                            <field name="narration"/>
                            <field name="terms_of_delivery"/>
                            <field name="partner_bank_id"/>
                            <field name="beneficiary"/>
                            <field name="loading_destination"/>
                            <field name="delivery_destination"/>

                        </group>
                        <group name="services_detail">
                            <field name="country"/>
                            <field name="notify"/>
                            <field name="container_no"/>
                            <field name="cont_seal_no"/>
                            <field name="rfid_seal_no"/>
                            <field name="export_under" string="Shipment Under"/>
                            <field name="export_info"/>
                            <field name="gross_wight"/>
                            <field name="net_wight"/>
                            <field name="eway_bill"/>
                            <field name="incoterm"/>
                            <field name="is_export"/>
                            <field name="export_declaration" attrs="{'invisible': [('is_export', '=', False)]}"/>
                            <field name="pre_carriage_by"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//page[@id='other_tab']/group[@id='other_tab_group']/group/field[@name='partner_bank_id'] " position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="packing_type"/>
                <field name="batch_marking"/>
            </xpath>
            <xpath expr="//page[@id='aml_tab']/field[@name='line_ids']/tree/field[@name='name']" position="after">
                <field name="packing_type"/>
                <field name="batch_marking"/>
            </xpath>
        </field>
    </record>
</odoo>