<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="web_inherit_template_website_layout" inherit_id="sale.portal_my_orders">
        <xpath expr="//thead/tr/th[4]" position="after">
            <th class="text-right">Record</th>
        </xpath>
        <xpath expr="//tr/td[4]" position="after">
            <td class="text-right">
                <a t-att-href="'/shop/cart/reorder?order_id=%s' % order.id" role="button" class="btn btn-primary">
                    ADD
                </a>
            </td>
        </xpath>
    </template>

</odoo>