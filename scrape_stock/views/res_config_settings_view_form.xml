<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_stock_account" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock_account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='group_lot_on_invoice']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="scrape_stock">
                    <div class="o_setting_left_pane">
                        <field name="is_validate" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_validate" />
                        <div class="text-muted">
                       scrape can validate scarpe orders
                    </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>     