<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_general_terms_views_tree" model="ir.ui.view">
        <field name="name">sale.order.general.terms.views.form.tree</field>
        <field name="model">sale.order.general.terms</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code" />
                <field name="description" />
                <field name="note" />
            </tree>
        </field>
    </record>

    <record id="sale_order_general_terms_views_form" model="ir.ui.view">
        <field name="name">sale.order.delivery.terms.viewsform</field>
        <field name="model">sale.order.general.terms</field>
        <field name="arch" type="xml">
            <form string="Genaral Terms">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="code" />
                        <field name="description" />
                        <field name="note" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>