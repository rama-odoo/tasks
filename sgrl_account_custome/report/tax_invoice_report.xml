<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="tax_invoice_report">
            <t t-if="not o" t-set="o" t-value="docs"/>
            <t t-set="company" t-value="company_id"/>
            <div class="header">
                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Company Logo"
                     class="float-left mr-4" style="max-height: 140px;vertical-align:middle;"/>
                <div style="text-align:center;" class="float-left">
                    <h5>
                        <strong t-field="o.company_id.partner_id.name"/>
                    </h5>
                    <div>
                        <span t-field="o.company_id.street"/>
                        <span t-field="o.company_id.street2" t-if="o.company_id.street2"/>
                        <span t-esc="o.company_id.city"/>
                        <span t-esc="o.company_id.zip"/>
                    </div>
                    <div>
                        <span t-esc="o.company_id.state_id.name"/>
                        <span t-esc="o.company_id.country_id.name"/>
                    </div>
                    <div>
                        <strong>mail:</strong>
                        <span t-field="o.company_id.email"/>
                        <div>
                            <strong>Tel Ph:</strong>
                            <span t-field="o.company_id.phone"/>
                        </div>
                        <div>
                            <strong>GSTIN:</strong>
                            <span t-field="o.company_id.vat"/>
                        </div>
                        <div>
                            <strong>PAN:</strong>
                            <span t-field="o.company_id.pan"/>
                        </div>
                    </div>
                </div>
                <!--                        <t t-if="o.l10n_in_transaction_id.qr_code_data">-->
                <!--                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' %('QR', o.l10n_in_transaction_id.qr_code_data, 200, 200)"/>-->
                <!--                        </t>-->
                <!--                    </div>-->
            </div>
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <!--                    <t t-set="o" t-value="o.with_context(lang=lang)"/>-->
                    <div class="page" style="font-size:0.8em">
                        <table class="w-100" style="border:1px solid black;">
                            <tr class="border-top border-dark">
                                <td class="text-center pl-1" colspan="2">
                                    <strong>TAX INVOICE</strong>
                                </td>
                            </tr>
                            <tr class="border-black pl-1">
                                <!--                                    <td class="pl-1" t-if="o.l10n_in_transaction_id.irn" name="irn" colspan="2">-->
                                IRN No :
                                <!--                                        <span class="m-0" t-field="o.l10n_in_transaction_id.irn"/>-->
                                <!--                                    </td>-->
                            </tr>
                            <tr class="border-black pl-1">
                                <!--                                    <td class="border-right border-dark pl-1" t-if="o.l10n_in_transaction_id.ack_no"-->
                                <!--                                        name="ack_no">-->
                                ACK No :
                                <!--                                        <span class="m-0" t-field="o.l10n_in_transaction_id.ack_no"/>-->

                                <!--                                    </td>-->
                                <!--                                    <td class="pl-1" t-if="o.l10n_in_transaction_id.ack_date">-->
                                ACK Date :
                                <!--                                        <span class="m-0" t-field="o.l10n_in_transaction_id.ack_date"/>-->
                                <!--                                    </td>-->
                            </tr>
                        </table>
                        <table class="w-100" style="border:0px solid black;">
                            <tr class="border-black">
                                <td class="pl-1">[] Original for Buyer</td>
                                <td class="pl-1">[] Duplicate for Transporter</td>
                                <td class="pl-1">[] Triplicate for Assess</td>
                                <td class="pl-1">[] Extra Copy</td>
                            </tr>
                            <tr class="border-black">
                                <td class="border-right border-dark pl-1" rowspan="3" colspan="2">
                                    <strong>Consignee / Shipped to :</strong>
                                    <div>
                                        <span t-field="o.company_id.street"/>
                                        <span t-field="o.company_id.street2" t-if="o.company_id.street2"/>
                                    </div>
                                    <div>
                                        <span t-esc="o.company_id.city"/>
                                        <span t-esc="o.company_id.zip"/>
                                        <span t-esc="o.company_id.state_id.name"/>
                                        <span t-esc="o.company_id.country_id.name"/>
                                    </div>
                                    <div>
                                        <strong>State Name :</strong>
                                        <strong t-field="o.company_id.partner_id.country_id"/>
                                    </div>
                                    <div>
                                        <strong>State Code:</strong>
                                        <strong t-field="o.company_id.partner_id.zip"/>
                                    </div>
                                </td>
                                <td class="border-right border-dark pl-1">
                                    Invoice No.
                                    <p>
                                        <strong t-field="o.name"/>
                                    </p>
                                </td>
                                <td class="pl-1">
                                    Invoice Date
                                    <p>
                                        <strong t-field="o.invoice_date"/>
                                    </p>
                                </td>
                            </tr>
                            <tr class="border-black pl-1">
                                <td class="border-right border-dark pl-1">
                                    Eway Bill no.Date
                                    <p>
                                        <strong t-field="o.eway_bill"/>
                                    </p>
                                </td>
                                <td class="pl-1">
                                    Sales Type
                                    <p>
                                        <strong t-field="o.fiscal_position_id"/>
                                    </p>
                                </td>
                            </tr>
                            <tr class="border-black pl-1">
                                <td class="border-right border-dark pl-1">
                                    Buyer's Order No.
                                    <p>
                                        <strong t-field="o.ref"/>
                                    </p>
                                </td>
                                <td class="pl-1">
                                    Buyer Order Date
                                    <p>
                                        <!--                                            <strong t-esc="o.invoice_line_ids.sale_line_ids.order_id.x_studio_customer_po_date"/>-->
                                    </p>
                                </td>
                            </tr>
                            <tr class="border-black pl-1">
                                <td class="border-right border-dark pl-1" rowspan="5" colspan="2">
                                    <strong>Buyer (Bill to) :</strong>
                                    <div>
                                        <span t-field="o.partner_id.street"/>
                                        <span t-field="o.partner_id.street2" t-if="o.partner_id.street2"/>
                                    </div>
                                    <div>
                                        <span t-esc="o.partner_id.city"/>
                                        <span t-esc="o.partner_id.zip"/>
                                        <span t-esc="o.partner_id.state_id.name"/>
                                        <span t-esc="o.partner_id.country_id.name"/>
                                    </div>
                                    <div>
                                        <strong>GSTIN No.</strong>
                                        <strong t-field="o.partner_id.vat"/>
                                    </div>
                                    <div>
                                        <strong>State Name :</strong>
                                        <strong t-field="o.partner_id.country_id"/>
                                    </div>
                                    <div>
                                        <strong>State Code :</strong>
                                        <strong t-field="o.partner_id.zip"/>
                                    </div>
                                </td>
                                <tr class="border-black pl-1">
                                    <td class="border-right border-dark pl-1">
                                        <span>System/Sales Order No. Date.</span>
                                        <t t-foreach="o.invoice_line_ids.sale_line_ids.order_id" t-as="sl">
                                            <p><strong t-esc="sl.name"/>,
                                                <strong t-esc="sl.date_order" t-options='{"widget": "date"}'/>
                                            </p>
                                        </t>
                                    </td>
                                    <td class="pl-1">
                                        <span>Motor Vehicle No.</span>
                                        <p>
                                            <strong t-field="o.motor_vehicle_no"/>
                                        </p>
                                    </td>
                                </tr>
                            </tr>
                            <tr class="border-black">
                                <td class="border-right border-dark pl-1">
                                    <span>Mode/Payment Terms</span>
                                    <p>
                                        <strong t-field="o.invoice_payment_term_id"/>
                                    </p>
                                </td>
                                <td class="pl-1">
                                    <span>LR No. Date</span>
                                    <p>
                                        <strong t-field="o.lr_date"/>
                                    </p>
                                </td>
                            </tr>
                            <tr class="border-black pl-1">
                                <td class="border-right border-dark pl-1">
                                    Dispatch Through/Carrier Name
                                    <p>
                                        <strong t-field="o.dispatch_throug"/>
                                    </p>
                                </td>
                                <td class="pl-1">
                                    Destination / Port Name:
                                    <p>
                                        <strong t-field="o.destination"/>
                                    </p>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td class="pl-1" colspan="2">
                                    Terms of Delivery
                                    <p>
                                        <strong t-field="o.invoice_incoterm_id"/>
                                    </p>
                                </td>
                            </tr>
                        </table>
                        <table class="text-center w-100 border border-dark" style="page-break-inside: avoid;">
                            <thead>
                                <tr class="border-black">
                                    <th name="th_sr_no" class="border-right border-dark">
                                        <strong class="pl-1">Sr. No</strong>
                                    </th>
                                    <th name="th_description" class="border-right border-dark">
                                        <strong class="pl-1">Description of Goods</strong>
                                    </th>
                                    <th name="th_hsn" class="border-right border-dark">
                                        <strong class="pl-1">HSN/SAC</strong>
                                    </th>
                                    <th name="th_hsn_rate" class="border-right border-dark">
                                        <strong class="pl-1">GST(%)</strong>
                                    </th>
                                    <th name="th_qty" class="border-right border-dark">
                                        <strong class="pl-1">Quantity</strong>
                                    </th>
                                    <th name="th_rate" class="border-right border-dark">
                                        <strong class="pl-1">Rate</strong>
                                    </th>
                                    <th name="th_per" class="border-right border-dark">
                                        <strong class="pl-1">Per</strong>
                                    </th>
                                    <th name="th_amount" class="text-right">
                                        <strong class="pl-1">Amount</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="tax_invoice_tbody">
                                <t t-set="lines"
                                   t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                <t t-foreach="lines" t-as="line">
                                    <tr class="border-black">
                                        <t t-if="line.product_id.type != 'service' ">
                                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                                <td class="border-right border-dark text-center">
                                                    <t t-esc="line_index +1"/>
                                                </td>
                                                <td class="border-right border-dark text-left pl-1"
                                                    name="account_invoice_line_name">

                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                    <p class="text-left">
                                                        <strong>PACK TYPE:</strong>
                                                        <!--                                                            <span t-esc="','.join(line.sale_line_ids.move_ids.move_line_ids.x_packing_type_id.mapped('name'))"/>-->
                                                    </p>
                                                    <p>
                                                        <strong>BATCH NO:</strong>
                                                        <!--                                                            <span t-esc="','.join(line.sale_line_ids.move_ids.move_line_ids.lot_id.mapped('name'))"/>-->
                                                    </p>

                                                </td>
                                                <td class="border-right border-dark text-center">
                                                    <span t-field="line.product_id.l10n_in_hsn_code"/>
                                                </td>
                                                <td t-attf-class="border-right border-dark {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                    style="text-align:center;">
                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"
                                                          id="line_tax_ids"/>
                                                </td>
                                                <td class="border-right border-dark text-center">
                                                    <span t-field="line.quantity"/>
                                                </td>
                                                <td class="border-right border-dark text-center pl-1">
                                                    <span class="text-nowrap" t-esc="'%.2f'% line.price_unit"/>
                                                </td>
                                                <td class="border-right border-dark pl-1">
                                                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap pl-1" t-field="line.price_subtotal"
                                                          groups="account.group_show_line_subtotals_tax_excluded"/>
                                                    <span class="text-nowrap pl-1" t-field="line.price_total"
                                                          groups="account.group_show_line_subtotals_tax_included"/>
                                                </td>
                                            </t>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <table class="border-left border-dark w-100" style="page-break-inside: avoid;">
                            <tr>
                                <td class="w-75">
                                    <tr class="border-black">
                                        <td class="border-right border-dark pl-2" rowspan="13">
                                            <strong>Remarks :</strong>
                                        </td>
                                    </tr>
                                </td>
                                <td class="w-25">
                                    <tr class="border-black">
                                        <td class="pl-1 border-right border-dark">
                                            <span>Assessable Value</span>
                                        </td>
                                        <td class="pl-1 border-right border-dark">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-foreach="lines" t-as="al">
                                        <tr>
                                            <td class="border-right border-dark pl-1">
                                                <t t-if="al.product_id.type == 'service' ">
                                                    <span t-esc="al.name" t-options="{'widget': 'text'}"/>
                                                </t>
                                            </td>
                                            <td class="border-right border-dark pl-1">
                                                <t t-if="al.product_id.type == 'service' ">
                                                    <span t-field="al.price_unit"
                                                          t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr class="border-black">
                                        <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                            <tr style="">
                                                <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and float_compare(o.amount_untaxed, amount_by_group[2], precision_rounding=o.currency_id.rounding) == 0">
                                                    <td>
                                                        <span class="text-nowrap" t-esc="amount_by_group[0]"/>
                                                    </td>
                                                    <td class="o_price_total">
                                                        <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td class="border-right border-dark pl-1">
                                                        <span t-esc="amount_by_group[0]"/>
                                                    </td>
                                                    <td class="o_price_total pl-1 border-right border-dark">
                                                        <span class="text-nowrap pl-1"
                                                              t-esc="amount_by_group[3]"/>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                    </tr>
                                    <tr>
                                        <td class="pl-1 border-right border-dark">
                                            <span>Total Tax Amount</span>
                                        </td>
                                        <td class="pl-1 border-right border-dark">
                                            <span class="pl-1" t-field="o.amount_tax"/>
                                        </td>
                                    </tr>

                                </td>
                            </tr>
                        </table>
                        <table class="w-100" style="border: 0px solid black;page-break-inside: avoid;">
                            <tr>
                                <td class="border-right border-dark pl-1">
                                    <strong>Amount in Words:</strong>

                                    <span t-esc="o.currency_id.with_context(lang='hi_IN').amount_to_text(o.amount_total)"/>
                                </td>
                                <td class="border-right border-dark pl-1">
                                    <strong>Grand Total</strong>
                                </td>
                                <td class="text-right pl-1">
                                    <strong class="pr-1" t-field="o.amount_residual"/>
                                </td>
                            </tr>
                        </table>
                        <table class="w-100" style="border: 0px solid black;page-break-inside: avoid;">
                            <tr>
                                <td>
                                    <strong>Total Tax amount</strong>
                                    <span t-esc="o.currency_id.with_context(lang='hi_IN').amount_to_text(o.amount_tax)"/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td class="pl-1">
                                    <strong>Terms Conditions :</strong>
                                </td>
                            </tr>
                            <tr>
                                <td class="pl-1">
                                    <span t-field="o.company_id.incoterm_id"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="pl-1">
                                    <strong>Company's Bank Detail</strong>
                                </td>
                            </tr>
                            <tr>
                                <td class="pl-1">
                                    Bank Name: DBS Bank India Limited.
                                    <br/>
                                    A/C NO : 23456789000023
                                    <br/>
                                    Branch : Surat
                                    <br/>
                                    Address : Shop NO 7, Shlok Business Center, Udhana Darwaja, Ring Road, Surat
                                    395002
                                    <br/>
                                    IFSC Code: DBSS0IN0831
                                    <br/>
                                    SWIFT Code: DBSSINBB
                                    <br/>
                                </td>
                            </tr>
                        </table>
                        <table class="w-100" style="border: 1px solid black;page-break-inside: avoid;">
                            <tr>
                                <td class="border-right border-dark pl-1">
                                    <strong>Declaration :</strong>
                                    <strong>
                                        We declare that this Invoice shows the actual price of the goods,
                                        <br/>
                                        described and that all particulars are true and correct.
                                    </strong>
                                </td>
                                <td class="text-right pr-3">
                                    <t t-esc="o.company_id.name"/>
                                    <p class="mt-5">Authorised Signatory</p>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="footer">
                        <div class="text-center" style="border-top: 1px solid black;">
                            <div class="text-muted">
                                "SUBJECT TO ANKLESHWAR JURISDICTION",This is Computer Generated Invoice.
                            </div>
                        </div>
                    </div>

                </t>
            </t>
            <!--            </div>-->
        </template>
        <template id="tax_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-call="sgrl_account_custome.tax_invoice_report" t-lang="lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>