<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

     <record id="sale_order_form_view" model="ir.ui.view">
            <field name="name">sale.order.form.view</field>
            <field name="model">x_sale_term</field>
            <field name="arch" type="xml">
                <form string="Terms and Condition">
                    <group>
                         <field name="x_terms_and_conditions"/>
                    </group>
                </form>
            </field>
        </record>

    <record model="ir.actions.act_window" id="sale_order_line_views_action">
        <field name="name">Terms</field>
        <field name="view_id" ref="sale_order_form_view"/>
        <field name="res_model">sale.order</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem id="sales_team_conditions"
              name="Terms and Conditions"
              parent="sale.menu_sale_config"
              action="rayzon_proforma_print_format.sale_order_line_views_action"
              sequence="2"/>

</odoo>